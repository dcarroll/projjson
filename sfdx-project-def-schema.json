        "packageDependencies": {
            "oneOf": [
                {
                    "additionalProperties": false,
                    "type": "object",
                    "properties": {
                        "subscriberPackageVersionId": {
                            "type": "string",
                            "title": "Subscriber Package Version ID",
                            "description": "The dependency subscriber package version ID (starts with 04t)"
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "packageId": {
                            "type": "string",
                            "title": "Package ID",
                            "description": "The dependency package2 ID (starts with 0Ho)"
                        },
                        "versionNumber": {
                            "type": "string",
                            "title": "Version Number",
                            "description": "The dependency version number"
                        }
                    },
                    "dependencies": {
                        "packageId": {
                            "required": [
                                "versionNumber"
                            ]
                        },
                        "versionNumber": {
                            "required": [
                                "packageId"
                            ]
                        }
                    },
                    "required": [
                        "packageId",
                        "versionNumber"
                    ]
                }
            ]
        },
        "packageDirectory": {
            "allOf": [
                {
                    "properties": {
                        "orgPreferences": {
                            "$ref": "#/definitions/orgPreferences"
                        },
                        "features": {
                            "$ref": "#/definitions/features"
                        },
                        "id": {
                            "type": "string",
                            "title": "ID",
                            "description": "ID of the package2 for the source directory (starts with 0Ho)"
                        },
                        "versionName": {
                            "type": "string",
                            "title": "Version Name",
                            "description": "The package version name."
                        },
                        "versionDescription": {
                            "type": "string",
                            "title": "Version Description",
                            "description": "The package version description"
                        },
                        "versionNumber": {
                            "type": "string",
                            "title": "Version Number",
                            "description": "The package version number: Major.Minor.Patch.Build"
                        },
                        "ancestorId": {
                            "type": "string",
                            "title": "Ancestor ID",
                            "description": "The package2 version ancestor ID (starts with 05i)"
                        },
                        "ancestorVersion": {
                            "type": "string",
                            "title": "Ancestor Version",
                            "description": "The package2 ancestor version number."
                        }
                    },
                    "dependencies": {
                        "id": {
                            "required": [
                                "versionName",
                                "versionDescription",
                                "versionNumber"
                            ]
                        },
                        "versionName": {
                            "required": [
                                "id",
                                "versionDescription",
                                "versionNumber"
                            ]
                        },
                        "versionNumber": {
                            "required": [
                                "versionName",
                                "versionDescription",
                                "id"
                            ]
                        },
                        "versionDescription": {
                            "required": [
                                "versionName",
                                "id",
                                "versionNumber"
                            ]
                        }
                    }
                },
                {
                    "properties": {
                        "dependencies": {
                            "type": "array",
                            "title": "package dependencies",
                            "items": {
                                "$ref": "#/definitions/packageDependencies"
                            }
                        }
                    }
                },
                {
                    "properties": {
                        "path": {
                            "default": "force-app/main/default",
                            "title": "path to where the source is stored in this project",
                            "type": "string"
                        },
                        "default": {
                            "default": false,
                            "title": "true if this is the default path to use, false if not",
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "path",
                        "default"
                    ]
                }
            ]
        }
